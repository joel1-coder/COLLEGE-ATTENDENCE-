	{
		"name": "attenance-monorepo",
		"private": true,
		"version": "1.0.0",
		"workspaces": [
			"backend",
			"frontend/attenance-frontend"
		],
		"scripts": {
			"install:all": "npm --prefix backend install && npm --prefix frontend/attenance-frontend install",
			"start:backend": "node backend/server.js",
			"start:frontend": "npm --prefix frontend/attenance-frontend start",
			"build:frontend": "npm --prefix frontend/attenance-frontend run build",
			"start": "concurrently \"npm run start:backend\" \"npm run start:frontend\""
		},
		"devDependencies": {
			"concurrently": "^8.2.0"
		}
	}
    